<div class="container">
  <% if @users.empty? %>
  <div class="alert alert-warning text-center">No votes yet</div>
  <% else %>
  <ol>
    <% @users.each do |user| %>
        <li>
          <p><%= user[:user].name %></p>
          <span>Total: <%= user[:total] %></span>
          <span><%= user[:up].zero? ? '' : "Votes UP: #{user[:up]}" %></span>
          <span><%= user[:down].zero? ? '' : "Votes DOWN: #{user[:down]}" %></span>
        </li>
    <% end %>
  </ol>
  <% end %>
</div>